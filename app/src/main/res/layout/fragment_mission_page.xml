<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MISSION"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Search and Create Mission Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/mission_searching"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Enter Mission Title"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableEnd="@drawable/baseline_search_24"
            android:background="@drawable/customize_edit_text"
            android:elevation="2dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="+ Create Mission"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_shape"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>

    <!-- Filters -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/mission_type_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Select Type"
            android:focusable="false"
            android:inputType="none"
            android:background="@drawable/customize_edit_text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/mission_status_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Status"
            android:focusable="false"
            android:inputType="none
"
            android:background="@drawable/customize_edit_text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Created At -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created At"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/mission_create_at_edittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Created At"
            android:focusable="false"
            android:inputType="none"
            android:background="@drawable/customize_edit_text"
            android:drawableEnd="@drawable/black_calendar_22086"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp"/>
        <!-- Reset Button -->
        <Button
            android:id="@+id/reset_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Reset"
            android:textColor="#4CAF50"
            android:background="@drawable/button_outline_background"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Mission Title"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textStyle="bold"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Created At"
                        android:textStyle="bold"/>
                </LinearLayout>

                <FrameLayout
                    android:background="@drawable/table_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/baseline_inbox_24"
                            android:contentDescription="Mail icon"
                            app:tint="#757575"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No data"
                            android:textColor="#757575"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>