<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Màu nền khi focus -->
            <stroke android:color="@color/mainColor" android:width="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Màu nền mặc định -->
            <stroke android:color="#8F7B7583" android:width="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>